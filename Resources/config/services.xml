<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults autowire="true" public="false" />

        <service id="Damax\Bundle\ApiAuthBundle\Listener\ResponseListener">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
        </service>

        <service id="Damax\Bundle\ApiAuthBundle\Security\UserProvider">
            <argument>%damax.api_auth.tokens%</argument>
        </service>

        <service id="Damax\Bundle\ApiAuthBundle\Security\Authenticator">
            <argument>Authorization</argument>
        </service>

    </services>
</container>
